<?xml version="1.0" encoding="utf-8"?>
<com.zcheng.layout.viewpagerlayout.StickyNavLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@id/id_stickynavlayout_topview"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@mipmap/shuai"
            android:text="看这里 如果你是王猪 那么 nmm"
            android:textColor="#fff"
            android:textSize="50sp"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <LinearLayout
        android:id="@id/id_stickynavlayout_indicator"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOne"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#999999"
            android:gravity="center"
            android:text="one"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTwo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#999999"
            android:gravity="center"
            android:text="two"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvthree"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#999999"
            android:gravity="center"
            android:text="three"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvfour"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#999999"
            android:gravity="center"
            android:text="four"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivCustum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@mipmap/a" />

    <com.zcheng.layout.viewpagerlayout.SimpleViewPagerIndicator
        android:id="@+id/sp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <android.support.v4.view.ViewPager
        android:id="@id/id_stickynavlayout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--<com.zcheng.myflowlayout.viewpagerlayout.HoriontalViewPager-->
    <!--android:id="@id/id_stickynavlayout_viewpager"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="#000000" />-->

</com.zcheng.layout.viewpagerlayout.StickyNavLayout>
